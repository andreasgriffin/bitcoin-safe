{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install uv",
            "type": "process",
            "command": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
            },
            "args": [
                "-m",
                "pip",
                "install",
                "uv"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "uv Sync",
            "type": "process",
            "command": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
            },
            "args": [
                "-m",
                "uv",
                "sync",
                "--locked"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "dependsOn": "Install uv"
        }
    ]
}
